<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwill.billycar.mapper.ReservMapper">
	<select id="selectCarList" resultType="com.itwill.billycar.vo.CarVO">
		SELECT *
		  FROM car c JOIN Reservation rs
		  	ON c.car_number = rs.car_number
		 WHERE NOT(rs.reserv_pickupdate lte #{pickupDate} AND rs.reserv_returndate gte #{returnDate});
		 <if test="car.car_type != null"> AND car_type IN (${car.car_type})</if>
		 <if test="car.car_fuel != null"> AND car_fuel IN (${car.car_fuel})</if>
	</select>
	
	<select id="selectCar" resultType="com.itwill.billycar.vo.CarVO">
		SELECT *
		  FROM car
		 WHERE car_idx = #{idx}
	</select>
	
	<!-- 예약 가능한 총 차량 -->
	<select id="selectReservCountCar">
		select count(*) from car
<!-- 		<if test="res"> -->
<!-- 		where reserv_status = 1; -->
<!-- 		</if> -->
	</select>
</mapper>















